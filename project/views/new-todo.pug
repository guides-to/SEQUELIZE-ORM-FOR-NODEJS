extends layout

block content
  h4.col-md-6.col-12.offset-md-3.mb-3 Create A TODO

  form.form-horizontal.col-md-6.col-12.offset-md-3(action="/todo/new", method="POST")
    .form-group
      label(for="title") Title
      input#title.form-control(type="text", name="title", required)
    
    .form-group
      label(for="description") Description
      textarea#description.form-control(name="description", required)

    .form-group
      button.btn.btn-primary.btn-block(type="submit") Create